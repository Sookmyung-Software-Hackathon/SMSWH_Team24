<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="6dp"
            >
            <TextView
                android:id="@+id/meetingTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_margin="4dp"

                android:text="제목"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Text_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint="제목"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/meetingUploader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:layout_margin="4dp"

                android:text="게시자정보"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Text_uploader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint="게시자이름"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/meetingPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:layout_margin="4dp"

                android:text="설명"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Text_post"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint="설명"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/meetingSpotName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:layout_margin="4dp"

                android:text="식당이름"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Text_spotName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint="식당이름"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/meetingSpot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="장소찾기"
                />
            <RelativeLayout
                android:id="@+id/map_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </RelativeLayout>
            <TextView
                android:id="@+id/meetingHeadCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"

                android:layout_margin="4dp"

                android:text="인원수"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Text_headCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint="인원수"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="right"
                android:text="저장"
                android:textStyle="bold"
                android:textSize="15dp"
                android:clickable="true"
                />

        </LinearLayout>

</FrameLayout>
